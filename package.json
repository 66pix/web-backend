    "body-parser": "^1.17.0",
    "celebrate": "^4.0.1",
    "cheerio": "^0.22.0",
    "convict": "^2.0.0",
    "cors": "^2.8.1",
    "debug": "^2.6.1",
    "express": "^4.15.0",
    "express-jwt": "^5.1.0",
    "joi": "^10.2.2",
    "jsonwebtoken": "^7.3.0",
    "node-constants": "0.0.2",
    "nunjucks": "^3.0.0",
    "pm2": "^2.4.2",
    "ramda": "^0.23.0",
    "raven": "^1.1.3",
    "resolve": "^1.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/bluebird": "^3.0.37",
    "@types/body-parser": "^0.0.34",
    "@types/convict": "^0.6.33",
    "@types/cors": "^2.8.0",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.35",
    "@types/express-jwt": "^0.0.34",
    "@types/hashids": "^1.0.28",
    "@types/joi": "^10.0.0",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.5",
    "@types/nunjucks": "0.0.32",
    "@types/ramda": "^0.0.3",
